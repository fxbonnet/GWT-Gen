<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>common</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
	  <directory>${project.build.outputDirectory}</directory>
	  <includes>
	  		<include>com/hiperf/common/ui/client/*.class</include>
	  		<include>com/hiperf/common/ui/client/exception/**</include>
	  		<include>com/hiperf/common/ui/client/i18n/**</include>
	  		<include>com/hiperf/common/ui/client/service/**</include>
	  		<include>com/hiperf/common/ui/shared/**</include>
			<include>com/hiperf/common/ui/server/*.class</include>
			<include>com/hiperf/common/ui/server/util/sequence/**</include>
			<include>com/hiperf/common/ui/server/tx/**</include>
			<include>com/hiperf/common/ui/server/listener/**</include>
			<include>com/hiperf/common/ui/server/filter/**</include>
			<include>com/hiperf/common/ui/server/storage/*.class</include>
			<include>com/sun/xml/bind/*.class</include>
      </includes>
	  <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>